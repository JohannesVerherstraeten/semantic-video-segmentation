{
    "name": "enet-cityscapes-imgseq",

    "arch": {
        "type": "ENet",
        "kwargs": {}
    },
    "dataset": {
        "type": "CityscapesImgSequence",
        "kwargs": {}
    },

    "data_loader": {
        "train": {
            "kwargs": {
                "batch_size": 3,
                "shuffle": true,
                "use_workers": true
            }
        },
        "val": {
            "kwargs": {
                "batch_size": 3,
                "shuffle": false,
                "use_workers": true
            }
        },
        "test": {
            "kwargs": {
                "batch_size": 3,
                "shuffle": false,
                "use_workers": true
            }
        },
        "visualize": {
            "kwargs": {
                "batch_size": 2,
                "shuffle": false,
                "use_workers": true
            }
        }
    },
    "conceptual_loss": {
        "type": "CrossEntropyLoss",
        "kwargs": {
            "weight": 1.0
        },
        "weighing": {
            "type": "enet_weighing",
            "kwargs": {
                "ignore_labels": ["unlabeled"],
                "c": 1.02
            }
        }
    },
    "metrics": [
        {
            "type": "IoU",
            "kwargs": {
                "ignore_labels": ["unlabeled"]
            }
        }
    ],
    "optimizer": {
        "type": "Adam",
        "kwargs": {
            "lr": 0.0005,
            "weight_decay": 0.0002,
            "amsgrad": true
        }
    },
    "lr_scheduler": {
        "type": "StepLR",
        "kwargs": {
            "step_size": 100,
            "gamma": 0.1
        }
    },
    "trainer": {
        "kwargs": {
            "epochs": 200,
            "save_dir": "saved/",
            "validation_freq": 1
        }
    }
}
