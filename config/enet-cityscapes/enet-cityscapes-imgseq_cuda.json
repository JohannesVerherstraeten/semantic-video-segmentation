{
    "name": "enet-cityscapes-imgseq",
    
    "arch": {
        "type": "ENet",
        "kwargs": {}
    },
    "dataset": {
        "type": "CityscapesImgSequence",
        "kwargs": {}
    },

    "data_loader": {
        "train": {
            "kwargs": {
                "batch_size": 12,
                "shuffle": true,
                "use_workers": true
            }
        },
        "val": {
            "kwargs": {
                "batch_size": 1,
                "shuffle": false,
                "use_workers": true
